{% block form_row %}
{% spaceless %}
    <div class="form-group">
        {{ form_errors(form) }}
        {{ form_label(form, "label.#{name}"|trans, {'label_attr' : { 'class':'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}