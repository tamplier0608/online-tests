<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
        <meta name="description" content="">
        <meta name="author" content="">
        <link rel="icon" href="../../favicon.ico">

        <title>{% block title %}{% endblock %}</title>

        {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/bootstrap-theme.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/jumbotron-narrow.css') }}" rel="stylesheet">
        {% endblock %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>

    <body>
        {% block body %}
        <div class="container">
            {% block header %}
            <div class="header clearfix">
                <nav>
                    <ul class="nav nav-pills pull-right">
                        {#<li role="presentation" class="active"><a href="{{ path('homepage') }}">{{ 'link.homepage'|trans }}</a></li>#}
                        {% if is_logged_user() %}
                        <li role="presentation">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <i class="glyphicon glyphicon-user"></i> {{ get_user().username }}
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                    <li><a href="{{ path('user_addcredit') }}">{{ 'user.wallet'|trans }}: <i class="glyphicon glyphicon-usd"></i>{{ get_user().wallet }}</a></li>
                                    <li><a href="{{ path('user_cabinet') }}">{{ 'link.user.cabinet'|trans }}</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="{{ path('user_logout') }}">{{ 'link.user.logout'|trans }}</a></li>
                                </ul>
                            </div>
                        </li>
                        {% else %}
                        <li role="presentation"><a href="{{ path('user_signin') }}">{{ 'link.signin'|trans }}</a></li>
                        <li role="presentation"><a href="{{ path('user_login') }}">{{ 'link.login'|trans }}</a></li>
                        {% endif %}
                    </ul>
                </nav>
                <a href="{{ path('homepage') }}"><h3 class="text-muted">Psycho Tests</h3></a>
            </div>
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade in" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        {{ message|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% endblock %}

            {% block content %}{% endblock %}

            {% block footer %}
            <footer class="footer">
                <p>&copy; Psycho Tests 2106</p>
            </footer>
            {% endblock %}

        </div> <!-- /container -->

        {% block javascripts %}
        <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
        <script src="{{ asset('js/jquery-1.12.min.js') }}"></script>
        <script src="{{ asset('js/jquery-migrate-1.2.1.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/ie10-viewport-bug-workaround.js') }}"></script>
        <script>
            $(document).ready(function(){
//                setTimeout('$(".alert").fadeOut()', 3000);
            });
        </script>
        {% endblock %}
    {% endblock %}
    </body>
</html>
