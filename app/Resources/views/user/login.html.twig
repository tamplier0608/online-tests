{% extends 'layout.html.twig' %}

{% block content %}

    <h1 style="text-align: center;">{{ 'title.login'|trans }}</h1>
    {% form_theme form 'form/row.html.twig' %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal login'}}) }}
        {% if auth_error %}
            <ul><li>{{ auth_error }}</li></ul>
        {% endif %}
        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">{{ 'label.submit'|trans }}</button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}